<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="v1.0_04_create_users_completed_courses" author="tupikdev">
        <createTable tableName="users_completed_courses">
            <column name="user_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_ucc_user" references="users(id)"/>
            </column>
            <column name="course_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_ucc_course" references="courses(id)"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="users_completed_courses" columnNames="user_id, course_id"/>
    </changeSet>
</databaseChangeLog>